<h3><%= question_header %></h3>

<%= form_with model: [@test, @question], local: true do |form| %>
<%= render 'shared/display_errors', resource: @question %>
<div>
  <%= form.label :body %><br>
  <%# при создании нового вопроса value будет пустым, при редактирование будет текущее значение %>
  <%= form.text_field :body, value: @question.body %>
</div>

<div>
  <%= form.label :test_id %><br>
  <%= form.collection_select :test_id, Test.all, :id, :title, prompt: 'Выберите тест' %>
</div>

<p><%= form.submit %></p>
<% end %>
<%= link_to 'Назад', url_for(@test) %>
