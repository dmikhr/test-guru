<h3><%= t('.contact_message') %></h3>

<%= form_with model: @contact, local: true do |form| %>
<%= render 'shared/display_errors', resource: @contact  %>
<div class="form-group">
<p>
  <%= form.label :name %><br>
  <%= form.text_field :name %>
</p>

<p>
  <%= form.label :email %><br>
  <%= form.email_field :email %>
</p>

<p>
  <%= form.label :message %><br>
  <%= form.text_area :message, rows: 10, cols: 60 %>
</p>
<p><%= form.submit class: "btn btn-primary" %></p>
<% end %>
<%= link_to t('.back'), root_path %>
</div>
